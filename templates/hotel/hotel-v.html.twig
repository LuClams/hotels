{% extends 'headers/header.html.twig' %}

{% block tag_title %} Nos hotels - Hotel V {% endblock %}
{% block title %} Hotel V {% endblock %}

{% block main %}
    <div class="card bg-dark text-white border-0">
        <img src="{{ img }}" class="card-img" alt="...">
        <div class="card-img-overlay text-center">
            <h1>Hotel V </h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
        </div>
    </div>

    <main>
        <div class=" m-3 justify-content-center justify-content-around ">
            {% for hotelvRoom in hotelvRooms %}
                <div class="card mb-3">
                    <div class="row align-items-center g-0">
                        <div class="col-md-4">
                            <img src="{{ hotelvRoom.image }}" class="img-fluid rounded-start" alt="{{ hotelvRoom.title }}">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">{{ hotelvRoom.title }}</h5>
                                <p class="card-text">{{ hotelvRoom.content }}</p>
                                <a href="{{ path('app_hotel_hotel-v') }}">Voir plus</a>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <p class="text-center"><b>678 €</b></p>
                            <a href="#" class="btn btn-primary">Réserver cette suite</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </main>
{% endblock %}



